<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/selector_btn_gray_back_red_stroke"
    >

    <Button
        android:id="@+id/facepic_camera_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/shape_on"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:text="Take photo"
        android:gravity="center"
        />

    <Button
        android:id="@+id/facepic_location_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Choose from album"
        android:background="@drawable/shape_on"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        />

    <Button
        android:id="@+id/facepic_cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/selector_btn_common_cancle"
        android:textColor="#ffffffff"
        android:textSize="22dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="Cancel"
        android:gravity="center"
        />
</LinearLayout>
