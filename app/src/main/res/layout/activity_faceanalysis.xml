<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:id="@+id/FaceAnalysis_image"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_alignTop="@+id/imageView6"
            android:layout_toEndOf="@+id/imageView6"
            android:gravity="center_vertical|left"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:id="@+id/FaceAnalysis_txt"
                android:layout_marginLeft="40dp"
                android:textSize="12dp"
                android:text="123321213" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:text="Start analysis"
        android:id="@+id/FaceAnalysis_btn"
        android:layout_height="50dp"
        android:background="@drawable/selector_btn_common_confirm"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/button"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="200dp"
        android:onClick="ClickFaceAnalysisStartMethod"
        />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selector_btn_common_cancle"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="200dp"
        android:text="Back"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="20dp"
         />
</LinearLayout>